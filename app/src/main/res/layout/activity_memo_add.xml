<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_memo_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <EditText
        android:id="@+id/add_task_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="点击添加备忘事项"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_marginTop="40sp"
        android:id="@+id/date_layout"
        android:layout_below="@+id/add_task_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_task_date"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_task_date_btn"
            android:text="选择日期"
            android:textSize="15sp"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/date_line"
        android:layout_below="@+id/date_layout"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1sp" />
    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_below="@+id/date_line"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_task_time"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_task_time_btn"
            android:text="选择时间"
            android:layout_weight="2"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:background="#cccccc"
        android:layout_below="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="1sp" />
    <LinearLayout
        android:layout_marginBottom="5sp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/giveup_add"
            android:text="返回"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/add_commit"
            android:text="添加"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
